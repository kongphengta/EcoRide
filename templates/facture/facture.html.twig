{% extends 'base.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
<div class="container mt-4" id="facture">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Facture</h1>
        <button class="btn btn-outline-secondary" onclick="window.print()">
            <i class="fas fa-print"></i> Imprimer la facture
        </button>
    </div>
    <div class="card p-4">
        <h5 class="mb-3">Informations de la réservation</h5>
        <ul class="list-unstyled">
            <li><strong>Nom du passager :</strong> {{ reservation.user.pseudo }}</li>
            <li><strong>Email :</strong> {{ reservation.user.email }}</li>
            <li><strong>Trajet :</strong> {{ reservation.covoiturage.depart }} → {{ reservation.covoiturage.arrivee }}</li>
            <li><strong>Date :</strong> {{ reservation.covoiturage.dateDepart|date('d/m/Y') }}</li>
            <li><strong>Heure :</strong> {{ reservation.covoiturage.heureDepart|date('H:i') }}</li>
            <li><strong>Conducteur :</strong> {{ reservation.covoiturage.chauffeur.pseudo }}</li>
            <li><strong>Prix :</strong> {{ reservation.covoiturage.prixPersonne }} €</li>
            <li><strong>Référence :</strong> {{ reservation.id }}</li>
        </ul>
        <hr>
        <p class="mb-0"><strong>Date d'émission :</strong> {{ "now"|date('d/m/Y') }}</p>
    </div>
</div>
{% endblock %}
