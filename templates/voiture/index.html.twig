{% extends 'base.html.twig' %}

{% block title %}Mes voitures
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Mes voitures</h1>

		{% if voitures is not empty %}
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Marque</th>
						<th>Modèle</th>
						<th>Couleur</th>
						<th>Année</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for voiture in voitures %}
						<tr>
							<td>{{ voiture.marque }}</td>
							<td>{{ voiture.modele }}</td>
							<td>{{ voiture.couleur }}</td>
							<td>{{ voiture.annee }}</td>
							<td>
								<a href="{{ path('app_voiture_modifier', {'id': voiture.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
								{{ include('voiture/_delete_form.html.twig') }}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% else %}
			<p>Vous n'avez pas encore enregistré de voiture.</p>
		{% endif %}

		<a href="{{ path('app_voiture_ajouter') }}" class="btn btn-primary mt-3">Ajouter une nouvelle voiture</a>
	</div>
{% endblock %}
