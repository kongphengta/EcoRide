{% extends 'base.html.twig' %}

{% block title %}Mon Profil -
	{{ user.pseudo }}
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col-md-4">
				<div class="card shadow-sm">
					<div class="card-body text-center">
						{% set avatar_url = user.getAvatarUrl(150) %}
						<img src="{{ avatar_url starts with 'http' ? avatar_url : asset(avatar_url) }}" alt="Photo de profil de {{ user.pseudo }}" class="img-fluid rounded-circle mb-3 profile-picture">
						<h4 class="card-title">{{ user.pseudo }}</h4>
						{# Affichage de la note moyenne avec des étoiles #}
						{% set averageRating = user.averageRating %}
						{% if user.avisRecus|length > 0 %}
							<div class="mb-2">
								<span class="text-warning">
									{% for i in 1..5 %}
										{% if i <= averageRating %}
											<i class="bi bi-star-fill"></i>
											{# Étoile pleine #}
										{% elseif i > averageRating and (i - 1) < averageRating %}
											<i class="bi bi-star-half"></i>
											{# Demi-étoile #}
										{% else %}
											<i class="bi bi-star"></i>
											{# Étoile vide #}
										{% endif %}
									{% endfor %}
								</span>
								<small class="text-muted">({{ averageRating|number_format(1, ',') }}/5)</small>
							</div>
						{% endif %}
						<p class="text-muted">{{ user.firstname }}
							{{ user.lastname }}</p>
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">
							<strong>Email :</strong>
							{{ user.email }}</li>
						<li class="list-group-item">
							<strong>Téléphone :</strong>
							{{ user.telephone ?: 'Non renseigné' }}</li>
						<li class="list-group-item">
							<strong>Date de naissance :</strong>
							{{ user.dateNaissance ? user.dateNaissance|date('d/m/Y') : 'Non renseignée' }}</li>
						<li class="list-group-item">
							<strong>Membre depuis :</strong>
							<p>Membre
								{{ user.membershipDurationAsString }}</p>
						</li>
					</ul>
				</div>
			</div>
			<div class="col-md-8">
				<h2>Bienvenue sur votre profil,
					{{ user.pseudo }}
					!</h2>
				<p>Gérez vos informations personnelles, vos véhicules et vos trajets.</p>

				<div class="card shadow-sm">
					<div class="card-header">
						Actions rapides
					</div>
					<div class="card-body">
						<a href="{{ path('app_profile_edit') }}" class="btn btn-primary mb-2">
							<i class="fas fa-user-edit me-2"></i>Modifier mes informations</a>
						<a href="{{ path('app_profile_change_password') }}" class="btn btn-secondary mb-2">
							<i class="fas fa-key me-2"></i>Changer mon mot de passe</a>
						<a href="{{ path('app_voiture_index') }}" class="btn btn-info mb-2">
							<i class="fas fa-car me-2"></i>Gérer mes voitures</a>
						<hr>

						{% if 'ROLE_CHAUFFEUR' in user.roles %}
							<a href="{{ path('app_covoiturage_new') }}" class="btn btn-success mb-2">
								<i class="fas fa-plus-circle me-2"></i>Proposer un covoiturage</a>
						{% else %}
							<p class="mb-2">Pour devenir chauffeur et proposer des trajets, vous devez d'abord enregistrer un véhicule.</p>
							<a href="{{ path('app_voiture_new') }}" class="btn btn-info">
								<i class="fas fa-car-side me-2"></i>Ajouter ma première voiture
							</a>
						{% endif %}
					</div>
				</div>

				<div class="card shadow-sm mt-4">
					<div class="card-header">
						Mes activités
					</div>
					<div class="card-body">
						<a href="{{ path('app_profile_my_covoiturages') }}" class="btn btn-outline-primary mb-2">
							<i class="fas fa-road me-2"></i>Mes covoiturages proposés</a>
						<a href="{{ path('app_profile_my_reservations') }}" class="btn btn-outline-info mb-2">
							<i class="fas fa-ticket-alt me-2"></i>Mes réservations</a>

					</div>
				</div>
				{# Section pour afficher les avis reçus #}
				<div class="card shadow-sm mt-4">
					<div class="card-header">
						Avis reçus ({{ user.avisRecus|length }})
					</div>
					<div class="card-body">
						{% if user.avisRecus is not empty %}
							{# On trie les avis pour afficher les plus récents en premier #}
							{% for avis in user.avisRecus|sort((a, b) => b.dateCreation <=> a.dateCreation) %}
								<div
									class="mb-3">
									{# Je suppose ici que votre entité Avis a les propriétés : note, commentaire, auteur (relation User) et dateCreation #}
									<strong>Note :</strong>
									<span class="text-warning">
										{% for i in 1..5 %}
											{% if i <= avis.note %}
												<i class="bi bi-star-fill"></i>
												{# Étoile pleine #}
											{% else %}
												<i class="bi bi-star"></i>
												{# Étoile vide #}
											{% endif %}
										{% endfor %}
									</span>
									<p class="mt-1 fst-italic">"{{ avis.commentaire }}"</p>
									<small class="text-muted">
										Laissé par
										<strong>{{ avis.auteur.pseudo }}</strong>
										le
										{{ avis.dateCreation|date('d/m/Y') }}
									</small>
								</div>
								{% if not loop.last %}<hr>
								{% endif %}
							{% endfor %}
						{% else %}
							<p class="text-muted">Vous n'avez pas encore reçu d'avis.</p>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
